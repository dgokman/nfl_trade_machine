
<%= form_for @trade do |f| %>
  <% if @trade.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@trade.errors.count, "error") %> prohibited this article from being saved:</h4>
      <ul>
        <% @trade.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.submit "Start Trade", class: 'trade' %>
  </p>
<% end %>

<%= link_to "See all Trades", root_path %>
<% unless @trades == [] || @trades.last.status.nil? || current_user.trades.last.trade_teams.length < 2 %>
<hr>
  <h3 id="black"><strong>Trade Result: <%= @trades.last.status %></strong></h3>
    <h4 id="blue"><strong><%= @trades.last.team_1_new_cap_hit %> | <%= @trades.last.team_2_new_cap_hit %></strong></h4>
    <% if @trades.last.team_1_change %>
    <h4 id="blue"><strong><%= @trades.last.team_1_change %> | <%= @trades.last.team_2_change %></strong></h4>
    <% end %>
    <% if @trades.last.cap_needed %>
    <h4 id="red"><strong>For trade to pass, cut <%= @trades.last.cap_needed_team %> post-trade salary by <%= number_to_currency(@trades.last.cap_needed, precision: 0) %></strong></h4>
    <% end %>
    <% @trades.last.trade_teams.each do |trade_team| %>
      <h4><img src="<%= trade_team.team.logo %>"/> <%= trade_team.team.name %> (Salary Cap: <%= number_to_currency(trade_team.team.salary_cap, precision: 0) %>) trades: </h4>
        <% trade_team.traded_players.each do |traded_player| %>
        <h5><%= traded_player.player.name %> | <%= traded_player.player.position %> | <%= number_to_currency(traded_player.player.salary, precision: 0) %></h5>
    <% end %>
  <% end %>
<% end %>
