
<%= form_for @trade do |f| %>
  <% if @trade.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@trade.errors.count, "error") %> prohibited this article from being saved:</h4>
      <ul>
        <% @trade.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.submit "Start Trade", class: 'trade' %>
  </p>
<% end %>

<%= link_to "See all Trades", root_path %>
<% unless @trades == [] || @trades.last.status.nil? || current_user.trades.last.trade_teams.length < 2 %>
<hr>
  <h3 id="black"><strong>Trade Result: <%= @trades.last.status %></strong></h3>
    <h4 id="blue"><strong><%= @trades.last.team_1_new_cap_hit %> | <%= @trades.last.team_2_new_cap_hit %></strong>
    <% if @trades.last.cap_needed %></h4>
    <h4 id="red"><strong>For trade to pass, cut <%= @trades.last.cap_needed_team %> post-trade salary by $<%= @trades.last.cap_needed %></strong></h4>
    <% end %>
    <% @trades.last.trade_teams.each do |trade_team| %>
      <h4><img src="<%= Team.find(trade_team.team_id).logo %>"/> <%= Team.find(trade_team.team_id).name %> (Salary Cap: <%= number_to_currency(Team.find(trade_team.team_id).salary_cap, precision: 0) %>) trade: </h4>
        <% trade_team.traded_players.each do |traded_player| %>
        <h5><%= Player.find(traded_player.player_id).name %> | <%= Player.find(traded_player.player_id).position %> | <%= number_to_currency(Player.find(traded_player.player_id).salary, precision: 0) %></h5>
    <% end %>
  <% end %>
<% end %>
