
<%= form_for @trade do |f| %>
  <% if @trade.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@trade.errors.count, "error") %> prohibited this article from being saved:</h4>
      <ul>
        <% @trade.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.submit "Start Trade", class: 'trade' %>
  </p>
<% end %>

<%= link_to "See all Trades", root_path %>
<% unless @trades == [] || @trades.last.status.nil? || current_user.trades.last.trade_teams.length < 2 %>
<hr>
  <h3>Trade Result: <%= @trades.last.status %></h3>
  <% if @trades.last.cap_needed %>
    <h4 id="red">For trade to pass, cut <%= @trades.last.cap_needed_team %> salary by $<%= @trades.last.cap_needed %></h4>
  <% end %>
    <% @trades.last.trade_teams.each do |trade_team| %>
    <% trade_team.traded_players.each do |traded_player| %>
      <h4><%= Team.find(trade_team.team_id).name %></h4>
        <h5><%= Player.find(traded_player.player_id).name %> | <%= Player.find(traded_player.player_id).position %> | $<%= Player.find(traded_player.player_id).salary %></h5>
    <% end %>
  <% end %>
<% end %>
