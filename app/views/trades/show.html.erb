<% if current_user.trades.last.trade_teams.length < 2 %>
  <%= form_for [@trade, @trade_team] do |f| %>
    <% if @trade_team.errors.any? %>
      <div id="error_explanation">
          <% @trade_team.errors.full_messages.each do |msg| %>
            <div class="red">Error: <%= msg %></div>
          <% end %>
      </div>
    <% end %>

    <p>
      <%= f.label :team %><br>
      <%= f.collection_select(:team_id, Team.order(:name), :id, :name) %>
    </p>


    <p>
      <%= f.submit "Select Team", class: 'trade' %>
    </p>
  <% end %>
<% end %>
